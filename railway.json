{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 15,
    "startCommand": "cd backend && npm start"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_VERSION": "20"
      }
    }
  }
} 