# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=bloodcontract
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_this_to_a_secure_random_string

# Firebase Admin SDK Configuration
# Copy these values from the downloaded service account JSON file
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=bloodcontractgame
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_from_json
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key from JSON file\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@bloodcontractgame.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_from_json
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40bloodcontractgame.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=bloodcontractgame.firebasestorage.app

# Legacy Google OAuth (for migration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Client URL
CLIENT_URL=http://localhost:5173

# Default Avatar URLs
DEFAULT_AVATAR_MALE_URL=https://storage.googleapis.com/bloodcontractgame.firebasestorage.app/bloodcontract/avatars/default_avatar_mal.jpeg
DEFAULT_AVATAR_FEMALE_URL=https://storage.googleapis.com/bloodcontractgame.firebasestorage.app/bloodcontract/avatars/default_avatar_femal.jpeg 